
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

<div class='container'>
	<div class='row'>
	  <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-4 mx-auto'>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div>
        <%= flash[:notice] %>
      </div>

   <h1>User info</h1>
      <div class=form-group>
       <h4>Name</h4>
      <%= f.text_field :name ,class:"w-100" %>
      </div>

      <div class=form-group>
      <h4>Image</h4>
       <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class=form-group>
      <h4>Introduction</h4>
      <%= f.text_area :introduction ,class:"w-100" %>
      </div>

      <div class=form-group>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
 </div>
 </div>
</div>

<% end %>