
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->

	    <table class='table'>
	    	<tr>
	       <th><%= image_tag @user.get_profile_image(100,100) %></th>
	      </tr><!--固定値-->

        <tr>
	        <th>name</th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	      </tr>
	    </table>

	      <div class='row'>
	    	<%= link_to 'User', edit_user_path, class: "btn btn-secondary" %>
	      <!-- 編集リンクが未実装 -->

	    </div>
	    <h2 class="mt-3">New book</h2>
	    <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
      <%= form_with model: @book do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>

	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody></tbody>
	    </table>
	  </div>
	</div>
</div>