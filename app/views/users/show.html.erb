<div>
	<%= flash[:notice] %>
</duv>

<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	  　<%= render 'books/book', user: @user, book: @book %>
	  </div>

	  <div class='col-md-8 offset-md-1 mt-4'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>

	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	       <% @books.each do |book| %>
	      <tbody>
	      	  <tr>
	      	  	<td>
				 　 <%= link_to user_path(current_user.id) do %>
				    <%= image_tag book.user.get_profile_image(100,100) %>
			        <% end %>
               </td>
           <td>
           	  <%= link_to book.title, book_path(book.id) %>
           </td>
           <td>
              <p><%= book.body %></p>
           </td>
           </tr>
	      </tbody>
	      <% end %>
	    </table>
	  </div>
	</div>
</div>