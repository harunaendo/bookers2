<div>
  <%= flash[:notice] %>
</div>

<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
     <%= render 'book', user: @user, book: @book %>
    </div>
    <div class='col-md-8 offset-md-1 mt-4'>
     <h2>Book detail</h2>

      <table class="table">
       <tr>
        <td>
           <%= image_tag @book.user.get_profile_image(100,100) %>
           <%= link_to user_path(current_user.id) do %><br>
            <P><%= @book.user.name %></p>
           <% end %>
        </td>

        <td>
           <p><%= link_to @book.title, book_path %></p>
        </td>
        <td>
           <p><%= @book.body %></p>
        </td>
        <td>
           <% if @book.user == @user %>
            <%= link_to edit_book_path(@book.id), class: "btn btn-success" %>
           <% end %>
         </td>
         <td>
            <% if @book.user == @user %>
             <%= link_to book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %>
            Destroy
            <% end %>
         </td>
        </tr>
       </table>

	</div>
</div>
</div>
